{
    "source":{
        "include": ["src"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": ["plugins/markdown"],
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    },
    "opts":{
        "readme": "./README.md",
        "encoding":"utf8",
        "recurse": true,
        "destination": "./docs/",
        "template": "node_modules/clean-jsdoc-theme",
        "theme_opts":{
            "theme":"dark"
        }
    }
}